{
  "package": {
    "productName": "WeRead",
    "version": "1.0.0"
  },
  "tauri": {
    "security": {
      "csp": null,
      "devCsp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "ai.goviewlink.com",
          "windows": ["pake"],
          "plugins": ["*"],
          "enableTauriAPI": true
        },
        {
          "domain": "localhost",
          "windows": ["pake"],
          "plugins": ["*"],
          "enableTauriAPI": true
        },
        {
          "domain": "*",
          "windows": ["pake"],
          "plugins": ["*"],
          "enableTauriAPI": true
        }
      ]
    },
    "updater": {
      "active": false
    },
    "systemTray": {
      "iconPath": "png/icon_512.png",
      "iconAsTemplate": false
    },
    "allowlist": {
      "all": true,
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**", "http://**"]
      },
      "fs": {
        "all": true,
        "scope": ["$DOWNLOAD/*"]
      }
    }
  },
  "build": {
    "withGlobalTauri": true,
    "devPath": "../dist",
    "distDir": "../dist",
    "beforeBuildCommand": "",
    "beforeDevCommand": ""
  }
}
